<UserControl x:Class="KawaiiStudio.App.Views.PrintingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0B0B0B">
  <Grid>
    <Image Source="{Binding BackgroundPath, Converter={StaticResource FilePathToImage}}"
           Stretch="UniformToFill"
           Opacity="0.9" />
    <Rectangle Fill="#66000000" />
    <Grid Margin="24">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <StackPanel Grid.Row="0" Margin="0,0,0,12">
        <TextBlock Text="Printing" FontSize="32" FontWeight="SemiBold" />
        <TextBlock Text="Preview of the print output" FontSize="14" Foreground="#B8B8B8" Margin="0,4,0,0" />
      </StackPanel>

      <Border Grid.Row="1" Background="#101010" CornerRadius="12" Padding="12">
        <Grid>
          <Image Source="{Binding PrintPreviewPath, Converter={StaticResource FilePathToImage}}" Stretch="Uniform" />
          <TextBlock Text="Print preview unavailable" FontSize="14" Foreground="#B8B8B8"
                     HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock.Style>
              <Style TargetType="TextBlock">
                <Setter Property="Visibility" Value="Collapsed" />
                <Style.Triggers>
                  <DataTrigger Binding="{Binding PrintPreviewPath}" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Visible" />
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </TextBlock.Style>
          </TextBlock>
        </Grid>
      </Border>

      <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
        <Button Content="Continue" Command="{Binding ContinueCommand}" FontSize="18" Padding="18,10" />
      </StackPanel>
    </Grid>
  </Grid>
</UserControl>
