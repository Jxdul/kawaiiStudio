<UserControl x:Class="KawaiiStudio.App.Views.PaymentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0B0B0B">
  <Grid>
    <Image Source="{Binding BackgroundPath, Converter={StaticResource FilePathToImage}}"
           Stretch="UniformToFill"
           Opacity="0.9" />
    <Rectangle Fill="#66000000" />
    <Grid Margin="24">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,16">
        <Button Content="Back" Command="{Binding BackCommand}" />
        <TextBlock Text="Payment" FontSize="28" FontWeight="SemiBold" Margin="16,0,0,0" />
      </DockPanel>

      <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="260" />
        </Grid.ColumnDefinitions>

        <Border Background="#1A1A1A" CornerRadius="10" Padding="16" Margin="0,0,16,0">
          <StackPanel>
            <TextBlock Text="Order Summary" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8" />
            <TextBlock Text="{Binding SummaryText}" FontSize="14" TextWrapping="Wrap" />
            <TextBlock Text="{Binding IsPaid, StringFormat=Paid: {0}}" FontSize="12" Foreground="#B8B8B8" Margin="0,12,0,0" />
          </StackPanel>
        </Border>

        <StackPanel Grid.Column="1">
          <Button Content="Cancel" Command="{Binding CancelCommand}" />
        </StackPanel>
      </Grid>

      <Border Grid.Row="2" Background="#1A1A1A" CornerRadius="10" Padding="16" Margin="0,16,0,0">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <StackPanel>
            <TextBlock Text="Tokens" FontSize="18" FontWeight="SemiBold" />
            <TextBlock Text="{Binding TokenStatusText}" FontSize="14" Foreground="#B8B8B8" Margin="0,8,0,0" />
            <TextBlock Text="{Binding TotalPriceText}" FontSize="12" Foreground="#8A8A8A" Margin="0,2,0,0" />
          </StackPanel>
          <Button Grid.Column="1" Content="Add 5 Tokens" Command="{Binding AddTokenCommand}" FontSize="16" Padding="16,8" Margin="16,0,0,0" VerticalAlignment="Center" />
        </Grid>
      </Border>
    </Grid>
  </Grid>
</UserControl>
