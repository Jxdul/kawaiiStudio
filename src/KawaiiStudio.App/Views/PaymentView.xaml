<UserControl x:Class="KawaiiStudio.App.Views.PaymentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F6F2EA">
  <Grid>
    <Image Source="{Binding BackgroundPath, Converter={StaticResource FilePathToImage}}"
           Stretch="UniformToFill"
           Opacity="0.9" />
    <Rectangle Fill="#CCF6F2EA" />
    <Grid Margin="24">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,16">
        <Button Content="Back" Command="{Binding BackCommand}" />
        <TextBlock Text="Payment" FontSize="28" FontWeight="SemiBold" Margin="16,0,0,0" />
      </DockPanel>

      <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="260" />
        </Grid.ColumnDefinitions>

        <Border Background="#EEE7DD" CornerRadius="10" Padding="16" Margin="0,0,16,0">
          <StackPanel>
            <TextBlock Text="Order Summary" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8" />
            <TextBlock Text="{Binding SummaryText}" FontSize="14" TextWrapping="Wrap" />
            <TextBlock Text="{Binding IsPaid, StringFormat=Paid: {0}}" FontSize="12" Foreground="#B8B8B8" Margin="0,12,0,0" />
          </StackPanel>
        </Border>

        <StackPanel Grid.Column="1">
          <TextBlock Text="{Binding PromptText}" FontSize="14" Foreground="#B8B8B8" TextWrapping="Wrap" Margin="0,0,0,12" />
          <Button Content="Card Payment" Command="{Binding SelectCardCommand}" FontSize="16" Padding="16,8" Margin="0,0,0,8" />
          <Button Content="Use Cash" Command="{Binding SelectCashCommand}"
                  FontSize="16" Padding="16,8" Margin="0,0,0,16"
                  Visibility="{Binding IsCardActive, Converter={StaticResource BoolToVisibility}}" />
          <Button Content="Cancel" Command="{Binding CancelCommand}" />
        </StackPanel>
      </Grid>

      <Grid Grid.Row="2" Margin="0,16,0,0">
        <Border Background="#EEE7DD" CornerRadius="10" Padding="16"
                Visibility="{Binding IsCashActive, Converter={StaticResource BoolToVisibility}}">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel>
              <TextBlock Text="Cash" FontSize="18" FontWeight="SemiBold" />
              <TextBlock Text="{Binding TokenStatusText}" FontSize="14" Foreground="#B8B8B8" Margin="0,8,0,0" />
              <TextBlock Text="{Binding TotalPriceText}" FontSize="12" Foreground="#8A8A8A" Margin="0,2,0,0" />
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
              <Button Content="$5" Command="{Binding InsertFiveCommand}" FontSize="16" Padding="14,8" Margin="0,0,8,0" />
              <Button Content="$10" Command="{Binding InsertTenCommand}" FontSize="16" Padding="14,8" Margin="0,0,8,0" />
              <Button Content="$20" Command="{Binding InsertTwentyCommand}" FontSize="16" Padding="14,8" />
            </StackPanel>
          </Grid>
        </Border>

        <Border Background="#EEE7DD" CornerRadius="10" Padding="16"
                Visibility="{Binding IsCardActive, Converter={StaticResource BoolToVisibility}}">
          <StackPanel>
            <TextBlock Text="Card Payment" FontSize="18" FontWeight="SemiBold" />
            <TextBlock Text="{Binding CardStatusText}" FontSize="14" Foreground="#B8B8B8" Margin="0,8,0,0" />
            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
              <Button Content="Start" Command="{Binding StartCardPaymentCommand}" FontSize="16" Padding="14,8" Margin="0,0,8,0" />
              <Button Content="Approve" Command="{Binding ApproveCardPaymentCommand}" FontSize="16" Padding="14,8" Margin="0,0,8,0" />
              <Button Content="Decline" Command="{Binding DeclineCardPaymentCommand}" FontSize="16" Padding="14,8" />
            </StackPanel>
          </StackPanel>
        </Border>
      </Grid>
    </Grid>
  </Grid>
</UserControl>


