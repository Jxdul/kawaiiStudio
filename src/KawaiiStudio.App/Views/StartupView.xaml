<UserControl x:Class="KawaiiStudio.App.Views.StartupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:KawaiiStudio.App.ViewModels">
  <UserControl.Style>
    <Style TargetType="UserControl">
      <Setter Property="Background" Value="#F6F2EA" />
      <Style.Triggers>
        <DataTrigger Binding="{Binding IsTestMode}" Value="True">
          <Setter Property="Background" Value="#3B82F6" />
        </DataTrigger>
      </Style.Triggers>
    </Style>
  </UserControl.Style>
  <UserControl.Resources>
    <Style x:Key="StartupTileBorderStyle" TargetType="Border">
      <Setter Property="Background" Value="#EEE7DD" />
      <Setter Property="BorderThickness" Value="4" />
      <Setter Property="CornerRadius" Value="12" />
      <Setter Property="Padding" Value="16" />
      <Setter Property="Margin" Value="8" />
      <Setter Property="BorderBrush" Value="#FACC15" />
      <Setter Property="Effect">
        <Setter.Value>
          <DropShadowEffect Color="#40000000" BlurRadius="8" ShadowDepth="4" />
        </Setter.Value>
      </Setter>
      <Style.Triggers>
        <DataTrigger Binding="{Binding State}" Value="{x:Static vm:StartupCheckState.Pending}">
          <Setter Property="BorderBrush" Value="#FACC15" />
        </DataTrigger>
        <DataTrigger Binding="{Binding State}" Value="{x:Static vm:StartupCheckState.Testing}">
          <Setter Property="BorderBrush" Value="#F97316" />
        </DataTrigger>
        <DataTrigger Binding="{Binding State}" Value="{x:Static vm:StartupCheckState.Success}">
          <Setter Property="BorderBrush" Value="#22C55E" />
        </DataTrigger>
        <DataTrigger Binding="{Binding State}" Value="{x:Static vm:StartupCheckState.Error}">
          <Setter Property="BorderBrush" Value="#EF4444" />
        </DataTrigger>
      </Style.Triggers>
    </Style>
  </UserControl.Resources>
  <Grid>
    <Image Source="{Binding BackgroundPath, Converter={StaticResource FilePathToImage}}"
           Stretch="UniformToFill"
           Opacity="0.9" />
    <Rectangle>
      <Rectangle.Style>
        <Style TargetType="Rectangle">
          <Setter Property="Fill" Value="#CCF6F2EA" />
          <Style.Triggers>
            <DataTrigger Binding="{Binding IsTestMode}" Value="True">
              <Setter Property="Fill" Value="#CC3B82F6" />
            </DataTrigger>
          </Style.Triggers>
        </Style>
      </Rectangle.Style>
    </Rectangle>
    <Grid Margin="24">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <StackPanel Grid.Row="0" Margin="0,0,0,12">
        <TextBlock Text="Startup Checks" FontSize="32" FontWeight="Bold" />
        <TextBlock Text="{Binding ModeText}" FontSize="14" Foreground="#B8B8B8" Margin="0,4,0,0" />
      </StackPanel>

      <Grid Grid.Row="1" Margin="0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>

          <!-- Row 1: Camera (spans 2 cols), Cash Reader -->
          <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <Border.Style>
              <Style TargetType="Border" BasedOn="{StaticResource StartupTileBorderStyle}">
                <Style.Triggers>
                  <DataTrigger Binding="{Binding Checks[0].State}" Value="{x:Static vm:StartupCheckState.Pending}">
                    <Setter Property="BorderBrush" Value="#FACC15" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[0].State}" Value="{x:Static vm:StartupCheckState.Testing}">
                    <Setter Property="BorderBrush" Value="#F97316" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[0].State}" Value="{x:Static vm:StartupCheckState.Success}">
                    <Setter Property="BorderBrush" Value="#22C55E" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[0].State}" Value="{x:Static vm:StartupCheckState.Error}">
                    <Setter Property="BorderBrush" Value="#EF4444" />
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Border.Style>
            <StackPanel VerticalAlignment="Center">
              <TextBlock Text="{Binding Checks[0].Name}" FontSize="20" FontWeight="Bold" Margin="0,0,0,6" />
              <TextBlock Text="{Binding Checks[0].Status}" FontSize="16" Margin="0,0,0,4" />
              <TextBlock Text="{Binding Checks[0].Detail}"
                         FontSize="12"
                         Foreground="#8A8A8A"
                         TextWrapping="Wrap" />
            </StackPanel>
          </Border>

          <Border Grid.Row="0" Grid.Column="2">
            <Border.Style>
              <Style TargetType="Border" BasedOn="{StaticResource StartupTileBorderStyle}">
                <Style.Triggers>
                  <DataTrigger Binding="{Binding Checks[2].State}" Value="{x:Static vm:StartupCheckState.Pending}">
                    <Setter Property="BorderBrush" Value="#FACC15" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[2].State}" Value="{x:Static vm:StartupCheckState.Testing}">
                    <Setter Property="BorderBrush" Value="#F97316" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[2].State}" Value="{x:Static vm:StartupCheckState.Success}">
                    <Setter Property="BorderBrush" Value="#22C55E" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[2].State}" Value="{x:Static vm:StartupCheckState.Error}">
                    <Setter Property="BorderBrush" Value="#EF4444" />
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Border.Style>
            <StackPanel VerticalAlignment="Center">
              <TextBlock Text="{Binding Checks[2].Name}" FontSize="20" FontWeight="Bold" Margin="0,0,0,6" />
              <TextBlock Text="{Binding Checks[2].Status}" FontSize="16" Margin="0,0,0,4" />
              <TextBlock Text="{Binding Checks[2].Detail}"
                         FontSize="12"
                         Foreground="#8A8A8A"
                         TextWrapping="Wrap" />
            </StackPanel>
          </Border>

          <!-- Row 2: Camera Live View, Cash Accept, Printer Queue -->
          <Border Grid.Row="1" Grid.Column="0">
            <Border.Style>
              <Style TargetType="Border" BasedOn="{StaticResource StartupTileBorderStyle}">
                <Style.Triggers>
                  <DataTrigger Binding="{Binding Checks[1].State}" Value="{x:Static vm:StartupCheckState.Pending}">
                    <Setter Property="BorderBrush" Value="#FACC15" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[1].State}" Value="{x:Static vm:StartupCheckState.Testing}">
                    <Setter Property="BorderBrush" Value="#F97316" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[1].State}" Value="{x:Static vm:StartupCheckState.Success}">
                    <Setter Property="BorderBrush" Value="#22C55E" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[1].State}" Value="{x:Static vm:StartupCheckState.Error}">
                    <Setter Property="BorderBrush" Value="#EF4444" />
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Border.Style>
            <StackPanel VerticalAlignment="Center">
              <TextBlock Text="{Binding Checks[1].Name}" FontSize="20" FontWeight="Bold" Margin="0,0,0,6" />
              <TextBlock Text="{Binding Checks[1].Status}" FontSize="16" Margin="0,0,0,4" />
              <TextBlock Text="{Binding Checks[1].Detail}"
                         FontSize="12"
                         Foreground="#8A8A8A"
                         TextWrapping="Wrap" />
            </StackPanel>
          </Border>

          <Border Grid.Row="1" Grid.Column="1">
            <Border.Style>
              <Style TargetType="Border" BasedOn="{StaticResource StartupTileBorderStyle}">
                <Style.Triggers>
                  <DataTrigger Binding="{Binding Checks[3].State}" Value="{x:Static vm:StartupCheckState.Pending}">
                    <Setter Property="BorderBrush" Value="#FACC15" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[3].State}" Value="{x:Static vm:StartupCheckState.Testing}">
                    <Setter Property="BorderBrush" Value="#F97316" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[3].State}" Value="{x:Static vm:StartupCheckState.Success}">
                    <Setter Property="BorderBrush" Value="#22C55E" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[3].State}" Value="{x:Static vm:StartupCheckState.Error}">
                    <Setter Property="BorderBrush" Value="#EF4444" />
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Border.Style>
            <StackPanel VerticalAlignment="Center">
              <TextBlock Text="{Binding Checks[3].Name}" FontSize="20" FontWeight="Bold" Margin="0,0,0,6" />
              <TextBlock Text="{Binding Checks[3].Status}" FontSize="16" Margin="0,0,0,4" />
              <TextBlock Text="{Binding Checks[3].Detail}"
                         FontSize="12"
                         Foreground="#8A8A8A"
                         TextWrapping="Wrap" />
            </StackPanel>
          </Border>

          <Border Grid.Row="1" Grid.Column="2">
            <Border.Style>
              <Style TargetType="Border" BasedOn="{StaticResource StartupTileBorderStyle}">
                <Style.Triggers>
                  <DataTrigger Binding="{Binding Checks[4].State}" Value="{x:Static vm:StartupCheckState.Pending}">
                    <Setter Property="BorderBrush" Value="#FACC15" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[4].State}" Value="{x:Static vm:StartupCheckState.Testing}">
                    <Setter Property="BorderBrush" Value="#F97316" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[4].State}" Value="{x:Static vm:StartupCheckState.Success}">
                    <Setter Property="BorderBrush" Value="#22C55E" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[4].State}" Value="{x:Static vm:StartupCheckState.Error}">
                    <Setter Property="BorderBrush" Value="#EF4444" />
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Border.Style>
            <StackPanel VerticalAlignment="Center">
              <TextBlock Text="{Binding Checks[4].Name}" FontSize="20" FontWeight="Bold" Margin="0,0,0,6" />
              <TextBlock Text="{Binding Checks[4].Status}" FontSize="16" Margin="0,0,0,4" />
              <TextBlock Text="{Binding Checks[4].Detail}"
                         FontSize="12"
                         Foreground="#8A8A8A"
                         TextWrapping="Wrap" />
            </StackPanel>
          </Border>

          <!-- Row 3: Internet, Server (spans 2 cols) -->
          <Border Grid.Row="2" Grid.Column="0">
            <Border.Style>
              <Style TargetType="Border" BasedOn="{StaticResource StartupTileBorderStyle}">
                <Style.Triggers>
                  <DataTrigger Binding="{Binding Checks[5].State}" Value="{x:Static vm:StartupCheckState.Pending}">
                    <Setter Property="BorderBrush" Value="#FACC15" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[5].State}" Value="{x:Static vm:StartupCheckState.Testing}">
                    <Setter Property="BorderBrush" Value="#F97316" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[5].State}" Value="{x:Static vm:StartupCheckState.Success}">
                    <Setter Property="BorderBrush" Value="#22C55E" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[5].State}" Value="{x:Static vm:StartupCheckState.Error}">
                    <Setter Property="BorderBrush" Value="#EF4444" />
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Border.Style>
            <StackPanel VerticalAlignment="Center">
              <TextBlock Text="{Binding Checks[5].Name}" FontSize="20" FontWeight="Bold" Margin="0,0,0,6" />
              <TextBlock Text="{Binding Checks[5].Status}" FontSize="16" Margin="0,0,0,4" />
              <TextBlock Text="{Binding Checks[5].Detail}"
                         FontSize="12"
                         Foreground="#8A8A8A"
                         TextWrapping="Wrap" />
            </StackPanel>
          </Border>

          <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2">
            <Border.Style>
              <Style TargetType="Border" BasedOn="{StaticResource StartupTileBorderStyle}">
                <Style.Triggers>
                  <DataTrigger Binding="{Binding Checks[6].State}" Value="{x:Static vm:StartupCheckState.Pending}">
                    <Setter Property="BorderBrush" Value="#FACC15" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[6].State}" Value="{x:Static vm:StartupCheckState.Testing}">
                    <Setter Property="BorderBrush" Value="#F97316" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[6].State}" Value="{x:Static vm:StartupCheckState.Success}">
                    <Setter Property="BorderBrush" Value="#22C55E" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[6].State}" Value="{x:Static vm:StartupCheckState.Error}">
                    <Setter Property="BorderBrush" Value="#EF4444" />
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Border.Style>
            <StackPanel VerticalAlignment="Center">
              <TextBlock Text="{Binding Checks[6].Name}" FontSize="20" FontWeight="Bold" Margin="0,0,0,6" />
              <TextBlock Text="{Binding Checks[6].Status}" FontSize="16" Margin="0,0,0,4" />
              <TextBlock Text="{Binding Checks[6].Detail}"
                         FontSize="12"
                         Foreground="#8A8A8A"
                         TextWrapping="Wrap" />
            </StackPanel>
          </Border>

          <!-- Row 4: Booth Registration, Upload Endpoint, Frame Sync -->
          <Border Grid.Row="3" Grid.Column="0">
            <Border.Style>
              <Style TargetType="Border" BasedOn="{StaticResource StartupTileBorderStyle}">
                <Style.Triggers>
                  <DataTrigger Binding="{Binding Checks[7].State}" Value="{x:Static vm:StartupCheckState.Pending}">
                    <Setter Property="BorderBrush" Value="#FACC15" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[7].State}" Value="{x:Static vm:StartupCheckState.Testing}">
                    <Setter Property="BorderBrush" Value="#F97316" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[7].State}" Value="{x:Static vm:StartupCheckState.Success}">
                    <Setter Property="BorderBrush" Value="#22C55E" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[7].State}" Value="{x:Static vm:StartupCheckState.Error}">
                    <Setter Property="BorderBrush" Value="#EF4444" />
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Border.Style>
            <StackPanel VerticalAlignment="Center">
              <TextBlock Text="{Binding Checks[7].Name}" FontSize="20" FontWeight="Bold" Margin="0,0,0,6" />
              <TextBlock Text="{Binding Checks[7].Status}" FontSize="16" Margin="0,0,0,4" />
              <TextBlock Text="{Binding Checks[7].Detail}"
                         FontSize="12"
                         Foreground="#8A8A8A"
                         TextWrapping="Wrap" />
            </StackPanel>
          </Border>

          <Border Grid.Row="3" Grid.Column="1">
            <Border.Style>
              <Style TargetType="Border" BasedOn="{StaticResource StartupTileBorderStyle}">
                <Style.Triggers>
                  <DataTrigger Binding="{Binding Checks[8].State}" Value="{x:Static vm:StartupCheckState.Pending}">
                    <Setter Property="BorderBrush" Value="#FACC15" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[8].State}" Value="{x:Static vm:StartupCheckState.Testing}">
                    <Setter Property="BorderBrush" Value="#F97316" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[8].State}" Value="{x:Static vm:StartupCheckState.Success}">
                    <Setter Property="BorderBrush" Value="#22C55E" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[8].State}" Value="{x:Static vm:StartupCheckState.Error}">
                    <Setter Property="BorderBrush" Value="#EF4444" />
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Border.Style>
            <StackPanel VerticalAlignment="Center">
              <TextBlock Text="{Binding Checks[8].Name}" FontSize="20" FontWeight="Bold" Margin="0,0,0,6" />
              <TextBlock Text="{Binding Checks[8].Status}" FontSize="16" Margin="0,0,0,4" />
              <TextBlock Text="{Binding Checks[8].Detail}"
                         FontSize="12"
                         Foreground="#8A8A8A"
                         TextWrapping="Wrap" />
            </StackPanel>
          </Border>

          <Border Grid.Row="3" Grid.Column="2">
            <Border.Style>
              <Style TargetType="Border" BasedOn="{StaticResource StartupTileBorderStyle}">
                <Style.Triggers>
                  <DataTrigger Binding="{Binding Checks[9].State}" Value="{x:Static vm:StartupCheckState.Pending}">
                    <Setter Property="BorderBrush" Value="#FACC15" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[9].State}" Value="{x:Static vm:StartupCheckState.Testing}">
                    <Setter Property="BorderBrush" Value="#F97316" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[9].State}" Value="{x:Static vm:StartupCheckState.Success}">
                    <Setter Property="BorderBrush" Value="#22C55E" />
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Checks[9].State}" Value="{x:Static vm:StartupCheckState.Error}">
                    <Setter Property="BorderBrush" Value="#EF4444" />
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Border.Style>
            <StackPanel VerticalAlignment="Center">
              <TextBlock Text="{Binding Checks[9].Name}" FontSize="20" FontWeight="Bold" Margin="0,0,0,6" />
              <TextBlock Text="{Binding Checks[9].Status}" FontSize="16" Margin="0,0,0,4" />
              <TextBlock Text="{Binding Checks[9].Detail}"
                         FontSize="20"
                         Foreground="#8A8A8A"
                         TextWrapping="Wrap" />
            </StackPanel>
          </Border>
        </Grid>

      <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
        <Button Content="Enable Test Mode" 
                Command="{Binding EnableTestModeCommand}" 
                FontSize="18"
                Padding="20,12"
                Background="#E7DFD6"
                Foreground="#333333"
                BorderThickness="0"
                FontWeight="SemiBold"
                Cursor="Hand"
                Margin="0,0,16,0">
          <Button.Effect>
            <DropShadowEffect Color="#40000000" BlurRadius="12" ShadowDepth="6" />
          </Button.Effect>
          <Button.Style>
            <Style TargetType="Button">
              <Setter Property="Template">
                <Setter.Value>
                  <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="12"
                            Padding="{TemplateBinding Padding}">
                      <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                  </ControlTemplate>
                </Setter.Value>
              </Setter>
              <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                  <Setter Property="Background" Value="#DDD5CC" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                  <Setter Property="Background" Value="#CCC4BB" />
                </Trigger>
              </Style.Triggers>
            </Style>
          </Button.Style>
        </Button>
        <Button Content="Retry" 
                Command="{Binding RetryCommand}" 
                FontSize="18"
                Padding="20,12"
                Background="#E7DFD6"
                Foreground="#333333"
                BorderThickness="0"
                FontWeight="SemiBold"
                Cursor="Hand"
                Margin="0,0,16,0">
          <Button.Effect>
            <DropShadowEffect Color="#40000000" BlurRadius="12" ShadowDepth="6" />
          </Button.Effect>
          <Button.Style>
            <Style TargetType="Button">
              <Setter Property="Template">
                <Setter.Value>
                  <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="12"
                            Padding="{TemplateBinding Padding}">
                      <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                  </ControlTemplate>
                </Setter.Value>
              </Setter>
              <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                  <Setter Property="Background" Value="#DDD5CC" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                  <Setter Property="Background" Value="#CCC4BB" />
                </Trigger>
              </Style.Triggers>
            </Style>
          </Button.Style>
        </Button>
        <Button Content="Errors found - Continue anyways"
                Command="{Binding ForceContinueCommand}"
                FontSize="18"
                Padding="20,12"
                Background="#FDE7E7"
                Foreground="#9A2A2A"
                BorderThickness="0"
                FontWeight="SemiBold"
                Cursor="Hand"
                Visibility="{Binding CanForceContinue, Converter={StaticResource BoolToVisibility}}"
                Margin="0,0,16,0">
          <Button.Effect>
            <DropShadowEffect Color="#40000000" BlurRadius="12" ShadowDepth="6" />
          </Button.Effect>
          <Button.Style>
            <Style TargetType="Button">
              <Setter Property="Template">
                <Setter.Value>
                  <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="12"
                            Padding="{TemplateBinding Padding}">
                      <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                  </ControlTemplate>
                </Setter.Value>
              </Setter>
              <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                  <Setter Property="Background" Value="#F5D7D7" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                  <Setter Property="Background" Value="#E2C7C7" />
                </Trigger>
              </Style.Triggers>
            </Style>
          </Button.Style>
        </Button>
        <Button Content="Continue" 
                Command="{Binding ContinueCommand}" 
                FontSize="18"
                Padding="20,12"
                Background="#22C55E"
                Foreground="White"
                BorderThickness="0"
                FontWeight="SemiBold"
                Cursor="Hand">
          <Button.Effect>
            <DropShadowEffect Color="#40000000" BlurRadius="12" ShadowDepth="6" />
          </Button.Effect>
          <Button.Style>
            <Style TargetType="Button">
              <Setter Property="Template">
                <Setter.Value>
                  <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="12"
                            Padding="{TemplateBinding Padding}">
                      <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                  </ControlTemplate>
                </Setter.Value>
              </Setter>
              <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                  <Setter Property="Background" Value="#20B855" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                  <Setter Property="Background" Value="#1EA34A" />
                </Trigger>
              </Style.Triggers>
            </Style>
          </Button.Style>
        </Button>
      </StackPanel>
    </Grid>
  </Grid>
</UserControl>


