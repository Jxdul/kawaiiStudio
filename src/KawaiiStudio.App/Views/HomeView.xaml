<UserControl x:Class="KawaiiStudio.App.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F6F2EA">
  <UserControl.Resources>
    <Style x:Key="FullScreenTapButtonStyle" TargetType="Button">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="Padding" Value="0" />
      <Setter Property="Margin" Value="0" />
      <Setter Property="Focusable" Value="False" />
      <Setter Property="Cursor" Value="Hand" />
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}" />
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
  </UserControl.Resources>
  <Grid>
    <Image Source="{Binding BackgroundPath, Converter={StaticResource FilePathToImage}}"
           Stretch="UniformToFill"
           Opacity="0.9" />
    <Rectangle Fill="#CCF6F2EA" />
    <Grid Margin="24">
      <Border Background="#F9FFFFFF"
              BorderBrush="#FFE6D9C8"
              BorderThickness="1"
              CornerRadius="24"
              Padding="48,36"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
        <Border.Effect>
          <DropShadowEffect BlurRadius="18" ShadowDepth="6" Opacity="0.2" Color="#000000" />
        </Border.Effect>
        <StackPanel HorizontalAlignment="Center">
          <TextBlock Text="Kawaii Studio" FontSize="52" FontWeight="SemiBold" HorizontalAlignment="Center" />
          <TextBlock Text="Capture cute memories" FontSize="18" Foreground="#7A7064" HorizontalAlignment="Center" Margin="0,8,0,20" />
          <Border Background="#FFF0D7"
                  BorderBrush="#FFE2C8"
                  BorderThickness="1"
                  CornerRadius="20"
                  Padding="18,8"
                  HorizontalAlignment="Center">
            <TextBlock Text="Tap anywhere to continue" FontSize="16" FontWeight="SemiBold" Foreground="#6A4F2E" />
          </Border>
        </StackPanel>
      </Border>
    </Grid>
    <Button Content="Staff"
            Command="{Binding StaffCommand}"
            FontSize="12"
            Padding="10,4"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Margin="16"
            Opacity="0.7"
            Visibility="Collapsed" />
    <Border Background="#F2FFFFFF" Padding="10" CornerRadius="8"
            HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="16"
            Visibility="{Binding ShowDeviceStatus, Converter={StaticResource BoolToVisibility}}">
      <StackPanel>
        <TextBlock Text="Test Mode Devices" FontSize="12" FontWeight="SemiBold" Foreground="#4A4A4A" />
        <TextBlock Text="{Binding CameraDeviceStatus, StringFormat=Camera: {0}}" FontSize="11" Foreground="#6A6A6A" />
        <TextBlock Text="{Binding CashDeviceStatus, StringFormat=Cash: {0}}" FontSize="11" Foreground="#6A6A6A" />
        <TextBlock Text="{Binding CardDeviceStatus, StringFormat=Card: {0}}" FontSize="11" Foreground="#6A6A6A" />
      </StackPanel>
    </Border>
    <Button Style="{StaticResource FullScreenTapButtonStyle}"
            Command="{Binding StartCommand}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />
  </Grid>
</UserControl>

