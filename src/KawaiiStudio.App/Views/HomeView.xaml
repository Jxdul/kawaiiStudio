<UserControl x:Class="KawaiiStudio.App.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0B0B0B">
  <Grid>
    <Grid>
      <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Kawaii Studio" FontSize="48" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,16" />
        <Button Content="Tap to Start" Command="{Binding StartCommand}" FontSize="24" Padding="28,12" Margin="0,0,0,12" />
        <Button Content="Assets Library" Command="{Binding AssetsCommand}" FontSize="14" Padding="18,6" />
        <TextBlock Text="Load frames and backgrounds from Config folders" FontSize="12" Foreground="#B8B8B8" HorizontalAlignment="Center" Margin="0,12,0,0" />
      </StackPanel>
    </Grid>
    <Button Content="Staff" Command="{Binding StaffCommand}" FontSize="12" Padding="10,4" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="16" Opacity="0.7" />
  </Grid>
</UserControl>
