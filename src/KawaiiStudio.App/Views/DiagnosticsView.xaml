<UserControl x:Class="KawaiiStudio.App.Views.DiagnosticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F6F2EA">
  <ScrollViewer VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled">
    <StackPanel Margin="0,0,0,16">
      <!-- System Metrics -->
      <Border Background="#EEE7DD" CornerRadius="10" Padding="16" Margin="0,0,0,16">
        <StackPanel>
          <TextBlock Text="System Metrics" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12" />
          
          <Grid Margin="0,4,0,0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="200" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="CPU Usage:" FontSize="12" Foreground="#B8B8B8" VerticalAlignment="Center" />
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
              <TextBlock Text="{Binding CpuUsage, StringFormat='{}{0:F1}%'}" FontSize="12" VerticalAlignment="Center" />
              <Border Background="{Binding CpuUsage, Converter={StaticResource UsageToColor}}" 
                      CornerRadius="4" 
                      Width="100" 
                      Height="20" 
                      Margin="12,0,0,0"
                      VerticalAlignment="Center">
                <TextBlock Text="{Binding CpuUsage, StringFormat='{}{0:F0}%'}" 
                          FontSize="10" 
                          Foreground="White"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center" />
              </Border>
            </StackPanel>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Memory Usage:" FontSize="12" Foreground="#B8B8B8" VerticalAlignment="Center" Margin="0,8,0,0" />
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,8,0,0">
              <TextBlock Text="{Binding MemoryText}" FontSize="12" VerticalAlignment="Center" />
              <Border Background="{Binding MemoryUsage, Converter={StaticResource UsageToColor}}" 
                      CornerRadius="4" 
                      Width="100" 
                      Height="20" 
                      Margin="12,0,0,0"
                      VerticalAlignment="Center">
                <TextBlock Text="{Binding MemoryUsage, StringFormat='{}{0:F0}%'}" 
                          FontSize="10" 
                          Foreground="White"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center" />
              </Border>
            </StackPanel>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Disk Usage:" FontSize="12" Foreground="#B8B8B8" VerticalAlignment="Center" Margin="0,8,0,0" />
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,8,0,0">
              <TextBlock Text="{Binding DiskText}" FontSize="12" VerticalAlignment="Center" />
              <Border Background="{Binding DiskUsage, Converter={StaticResource UsageToColor}}" 
                      CornerRadius="4" 
                      Width="100" 
                      Height="20" 
                      Margin="12,0,0,0"
                      VerticalAlignment="Center">
                <TextBlock Text="{Binding DiskUsage, StringFormat='{}{0:F0}%'}" 
                          FontSize="10" 
                          Foreground="White"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center" />
              </Border>
            </StackPanel>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Network:" FontSize="12" Foreground="#B8B8B8" VerticalAlignment="Center" Margin="0,8,0,0" />
            <TextBlock Grid.Row="3" Grid.Column="1" 
                      Text="{Binding NetworkConnected, Converter={StaticResource BoolToStatus}}" 
                      FontSize="12" 
                      Foreground="{Binding NetworkConnected, Converter={StaticResource BoolToStatusColor}}"
                      VerticalAlignment="Center" 
                      Margin="0,8,0,0" />
          </Grid>
        </StackPanel>
      </Border>

      <!-- Hardware Status -->
      <Border Background="#EEE7DD" CornerRadius="10" Padding="16" Margin="0,0,0,16">
        <StackPanel>
          <TextBlock Text="Hardware Status" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12" />
          
          <Grid Margin="0,4,0,0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="200" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Camera:" FontSize="12" Foreground="#B8B8B8" VerticalAlignment="Center" />
            <TextBlock Grid.Row="0" Grid.Column="1" 
                      Text="{Binding CameraConnected, Converter={StaticResource BoolToStatus}}" 
                      FontSize="12" 
                      Foreground="{Binding CameraConnected, Converter={StaticResource BoolToStatusColor}}"
                      VerticalAlignment="Center" />

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Cash Acceptor:" FontSize="12" Foreground="#B8B8B8" VerticalAlignment="Center" Margin="0,8,0,0" />
            <TextBlock Grid.Row="1" Grid.Column="1" 
                      Text="{Binding CashAcceptorConnected, Converter={StaticResource BoolToStatus}}" 
                      FontSize="12" 
                      Foreground="{Binding CashAcceptorConnected, Converter={StaticResource BoolToStatusColor}}"
                      VerticalAlignment="Center" 
                      Margin="0,8,0,0" />

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Card Reader:" FontSize="12" Foreground="#B8B8B8" VerticalAlignment="Center" Margin="0,8,0,0" />
            <TextBlock Grid.Row="2" Grid.Column="1" 
                      Text="{Binding CardReaderConnected, Converter={StaticResource BoolToStatus}}" 
                      FontSize="12" 
                      Foreground="{Binding CardReaderConnected, Converter={StaticResource BoolToStatusColor}}"
                      VerticalAlignment="Center" 
                      Margin="0,8,0,0" />

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Printer:" FontSize="12" Foreground="#B8B8B8" VerticalAlignment="Center" Margin="0,8,0,0" />
            <TextBlock Grid.Row="3" Grid.Column="1" 
                      Text="{Binding PrinterStatus}" 
                      FontSize="12" 
                      VerticalAlignment="Center" 
                      Margin="0,8,0,0" />
          </Grid>
        </StackPanel>
      </Border>

      <!-- Application Info -->
      <Border Background="#EEE7DD" CornerRadius="10" Padding="16" Margin="0,0,0,16">
        <StackPanel>
          <TextBlock Text="Application Info" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12" />
          
          <Grid Margin="0,4,0,0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="200" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Current Session:" FontSize="12" Foreground="#B8B8B8" VerticalAlignment="Center" />
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentSessionId}" FontSize="12" VerticalAlignment="Center" />

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Uptime:" FontSize="12" Foreground="#B8B8B8" VerticalAlignment="Center" Margin="0,8,0,0" />
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Uptime}" FontSize="12" VerticalAlignment="Center" Margin="0,8,0,0" />

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Software Version:" FontSize="12" Foreground="#B8B8B8" VerticalAlignment="Center" Margin="0,8,0,0" />
            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SoftwareVersion}" FontSize="12" VerticalAlignment="Center" Margin="0,8,0,0" />

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Booth ID:" FontSize="12" Foreground="#B8B8B8" VerticalAlignment="Center" Margin="0,8,0,0" />
            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding BoothId}" FontSize="12" VerticalAlignment="Center" Margin="0,8,0,0" />

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Test Mode:" FontSize="12" Foreground="#B8B8B8" VerticalAlignment="Center" Margin="0,8,0,0" />
            <TextBlock Grid.Row="4" Grid.Column="1" 
                      Text="{Binding TestMode, Converter={StaticResource BoolToYesNo}}" 
                      FontSize="12" 
                      Foreground="{Binding TestMode, Converter={StaticResource BoolToStatusColor}}"
                      VerticalAlignment="Center" 
                      Margin="0,8,0,0" />
          </Grid>
        </StackPanel>
      </Border>

      <Button Content="Refresh" Command="{Binding RefreshCommand}" Padding="16,8" HorizontalAlignment="Right" />
    </StackPanel>
  </ScrollViewer>
</UserControl>
