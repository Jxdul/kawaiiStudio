<UserControl x:Class="KawaiiStudio.App.Views.CaptureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F6F2EA">
  <Grid>
    <Image Source="{Binding BackgroundPath, Converter={StaticResource FilePathToImage}}"
           Stretch="UniformToFill"
           Opacity="0.9" />
    <Rectangle Fill="#CCF6F2EA" />
    <Grid Margin="24">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,16">
        <TextBlock Text="Capture" FontSize="28" FontWeight="SemiBold" Margin="16,0,0,0" />
      </DockPanel>

      <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Live view centered in the middle column -->
        <Border CornerRadius="12" Grid.Column="1" Margin="24,0">
          <Grid>
            <Image Source="{Binding LiveViewImage}" Stretch="Uniform" />
            <TextBlock x:Name="CountdownTextBlock"
                       Text="{Binding CountdownText}"
                       FontSize="72"
                       FontWeight="Bold"
                       Foreground="#FFFFFF"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Opacity="0"
                       Visibility="{Binding IsCountdownActive, Converter={StaticResource BoolToVisibility}}">
              <TextBlock.RenderTransform>
                <TransformGroup>
                  <TranslateTransform x:Name="CountdownTranslate" X="0" Y="0" />
                  <RotateTransform x:Name="CountdownRotate" Angle="0" />
                </TransformGroup>
              </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock Text="Live View" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#B8B8B8">
              <TextBlock.Style>
                <Style TargetType="TextBlock">
                  <Setter Property="Visibility" Value="Collapsed" />
                  <Style.Triggers>
                    <DataTrigger Binding="{Binding LiveViewImage}" Value="{x:Null}">
                      <Setter Property="Visibility" Value="Visible" />
                    </DataTrigger>
                  </Style.Triggers>
                </Style>
              </TextBlock.Style>
            </TextBlock>
          </Grid>
        </Border>

        <!-- Images remaining on the right side -->
        <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="24,0,0,0">
          <TextBlock Text="Images remaining" FontSize="16" FontWeight="SemiBold" Foreground="#666666" Margin="0,0,0,12" HorizontalAlignment="Center" />
          <Ellipse Width="80" Height="80" Fill="#FF69B4" HorizontalAlignment="Center">
            <Ellipse.Effect>
              <DropShadowEffect Color="#40000000" BlurRadius="8" ShadowDepth="4" />
            </Ellipse.Effect>
          </Ellipse>
          <TextBlock Text="{Binding ImagesRemaining}"
                     FontSize="32"
                     FontWeight="Bold"
                     Foreground="#FFFFFF"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Margin="0,-64,0,0"
                     Panel.ZIndex="1" />
        </StackPanel>
      </Grid>

      <Button Grid.Row="2"
              Content="{Binding CaptureButtonText}"
              Command="{Binding ContinueCommand}"
              FontSize="24"
              FontWeight="SemiBold"
              Padding="48,20"
              Margin="0,24,0,0"
              HorizontalAlignment="Center"
              Visibility="{Binding ShowStartButton, Converter={StaticResource BoolToVisibility}}"
              Background="#FF69B4"
              Foreground="#FFFFFF"
              BorderThickness="0"
              Cursor="Hand">
        <Button.Effect>
          <DropShadowEffect Color="#60000000" BlurRadius="12" ShadowDepth="6" />
        </Button.Effect>
        <Button.Style>
          <Style TargetType="Button">
            <Setter Property="Template">
              <Setter.Value>
                <ControlTemplate TargetType="Button">
                  <Border Background="{TemplateBinding Background}"
                          CornerRadius="12"
                          Padding="{TemplateBinding Padding}">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                  </Border>
                </ControlTemplate>
              </Setter.Value>
            </Setter>
            <Style.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FF85C1E6" />
              </Trigger>
              <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#FF4A9FD5" />
              </Trigger>
            </Style.Triggers>
          </Style>
        </Button.Style>
      </Button>
    </Grid>
  </Grid>
</UserControl>


