<UserControl x:Class="KawaiiStudio.App.Views.LayoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0B0B0B">
  <Grid>
    <Image Source="{Binding BackgroundPath, Converter={StaticResource FilePathToImage}}"
           Stretch="UniformToFill"
           Opacity="0.9" />
    <Rectangle Fill="#66000000" />
    <Grid Margin="24">
      <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Pick a 4x6 Layout" FontSize="32" FontWeight="SemiBold" Margin="0,0,0,16" />
        <ItemsControl ItemsSource="{Binding Options}">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <UniformGrid Rows="1" Columns="3" />
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Button Command="{Binding DataContext.SelectLayoutCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                      CommandParameter="{Binding}"
                      Padding="20,12">
                <StackPanel>
                  <TextBlock Text="{Binding DisplayName}" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" />
                  <TextBlock Text="{Binding Slots, StringFormat={}{0} slots}" FontSize="12" Foreground="#B8B8B8" HorizontalAlignment="Center" />
                </StackPanel>
              </Button>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Button Content="Back" Command="{Binding BackCommand}" Margin="0,16,0,0" />
      </StackPanel>
    </Grid>
  </Grid>
</UserControl>
