<UserControl x:Class="KawaiiStudio.App.Views.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0B0B0B">
  <Grid Margin="24">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,16">
      <Button Content="Back" Command="{Binding BackCommand}" />
      <Button Content="Rescan" Command="{Binding RescanCommand}" />
      <StackPanel Orientation="Vertical" Margin="16,0,0,0">
        <TextBlock Text="Asset Library" FontSize="28" FontWeight="SemiBold" />
        <TextBlock Text="{Binding FramesRoot, StringFormat=Frames: {0}}" FontSize="12" Foreground="#B8B8B8" />
        <TextBlock Text="{Binding ThemeRoot, StringFormat=Theme: {0}}" FontSize="12" Foreground="#B8B8B8" />
      </StackPanel>
    </DockPanel>

    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <StackPanel Grid.Column="0" Margin="0,0,12,0">
        <TextBlock Text="Frame Categories" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8" />
        <TextBlock Text="No frame folders found yet." FontSize="12" Foreground="#B8B8B8">
          <TextBlock.Style>
            <Style TargetType="TextBlock">
              <Setter Property="Visibility" Value="Visible" />
              <Style.Triggers>
                <DataTrigger Binding="{Binding HasFrames}" Value="True">
                  <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
              </Style.Triggers>
            </Style>
          </TextBlock.Style>
        </TextBlock>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
          <ItemsControl ItemsSource="{Binding FrameCategories}">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <StackPanel />
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Border Background="#161616" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                  <Grid>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="120" />
                      <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#0F0F0F" CornerRadius="6" Padding="6" Margin="0,0,12,0" Height="140">
                      <Image Source="{Binding PreviewImagePath, Converter={StaticResource FilePathToImage}}" Stretch="Uniform" />
                    </Border>

                    <StackPanel Grid.Column="1">
                      <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="SemiBold" />
                      <TextBlock Text="{Binding TemplateType, StringFormat=Template: {0}}" FontSize="12" Foreground="#B8B8B8" />
                      <TextBlock Text="{Binding FrameCount, StringFormat=Frames: {0}}" FontSize="12" Foreground="#B8B8B8" />
                      <TextBlock Text="{Binding FrameNames}" FontSize="12" Foreground="#8A8A8A" TextWrapping="Wrap" />
                    </StackPanel>
                  </Grid>
                </Border>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </ScrollViewer>
      </StackPanel>

      <StackPanel Grid.Column="1" Margin="12,0,0,0">
        <TextBlock Text="Backgrounds" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8" />
        <TextBlock Text="No background folders found yet." FontSize="12" Foreground="#B8B8B8">
          <TextBlock.Style>
            <Style TargetType="TextBlock">
              <Setter Property="Visibility" Value="Visible" />
              <Style.Triggers>
                <DataTrigger Binding="{Binding HasBackgrounds}" Value="True">
                  <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
              </Style.Triggers>
            </Style>
          </TextBlock.Style>
        </TextBlock>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
          <ItemsControl ItemsSource="{Binding Backgrounds}">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <StackPanel />
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Border Background="#161616" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                  <Grid>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="180" />
                      <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#0F0F0F" CornerRadius="6" Padding="6" Margin="0,0,12,0" Height="100">
                      <Image Source="{Binding PreviewAssetPath, Converter={StaticResource FilePathToImage}}" Stretch="UniformToFill" />
                    </Border>

                    <StackPanel Grid.Column="1">
                      <TextBlock Text="{Binding ScreenKey}" FontSize="18" FontWeight="SemiBold" />
                      <TextBlock Text="{Binding AssetCount, StringFormat=Assets: {0}}" FontSize="12" Foreground="#B8B8B8" />
                      <TextBlock Text="{Binding AssetNames}" FontSize="12" Foreground="#8A8A8A" TextWrapping="Wrap" />
                    </StackPanel>
                  </Grid>
                </Border>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </ScrollViewer>
      </StackPanel>
    </Grid>
  </Grid>
</UserControl>
