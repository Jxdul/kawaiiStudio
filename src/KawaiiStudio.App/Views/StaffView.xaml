<UserControl x:Class="KawaiiStudio.App.Views.StaffView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0B0B0B">
  <Grid>
    <Image Source="{Binding BackgroundPath, Converter={StaticResource FilePathToImage}}"
           Stretch="UniformToFill"
           Opacity="0.9" />
    <Rectangle Fill="#66000000" />
    <Grid Margin="24">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,16">
        <Button Content="Back" Command="{Binding BackCommand}" />
        <TextBlock Text="Staff Panel" FontSize="28" FontWeight="SemiBold" Margin="16,0,0,0" />
      </DockPanel>

      <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel>
          <Border Background="#1A1A1A" CornerRadius="10" Padding="16" Margin="0,0,0,16">
            <StackPanel>
              <TextBlock Text="Tokens" FontSize="18" FontWeight="SemiBold" />
              <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <TextBlock Text="Token value ($)" FontSize="12" Foreground="#B8B8B8" Width="120" VerticalAlignment="Center" />
                <TextBox Text="{Binding TokenValue, UpdateSourceTrigger=PropertyChanged}" Width="80" />
              </StackPanel>
            </StackPanel>
          </Border>

          <Border Background="#1A1A1A" CornerRadius="10" Padding="16" Margin="0,0,0,16">
            <StackPanel>
              <TextBlock Text="Pricing" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8" />
              <ItemsControl ItemsSource="{Binding PricingEntries}">
                <ItemsControl.ItemTemplate>
                  <DataTemplate>
                    <Button Command="{Binding DataContext.SelectEntryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding}"
                            HorizontalContentAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0">
                      <Grid Margin="0,6,0,0">
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="220" />
                          <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Label}" FontSize="12" Foreground="#B8B8B8" VerticalAlignment="Center" />
                        <Border Grid.Column="1" Background="#0F0F0F" CornerRadius="4" Padding="8,4" Width="120">
                          <TextBlock Text="{Binding Value}" FontSize="12" />
                        </Border>
                      </Grid>
                    </Button>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>
              <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                <TextBlock Text="Max quantity" FontSize="12" Foreground="#B8B8B8" Width="120" VerticalAlignment="Center" />
                <TextBox Text="{Binding MaxQuantity, UpdateSourceTrigger=PropertyChanged}" Width="80" />
              </StackPanel>
            </StackPanel>
          </Border>

          <Border Background="#1A1A1A" CornerRadius="10" Padding="16" Margin="0,0,0,16">
            <StackPanel>
              <TextBlock Text="Timeouts" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8" />
              <ItemsControl ItemsSource="{Binding TimeoutEntries}">
                <ItemsControl.ItemTemplate>
                  <DataTemplate>
                    <Button Command="{Binding DataContext.SelectEntryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding}"
                            HorizontalContentAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0">
                      <Grid Margin="0,6,0,0">
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="220" />
                          <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Label}" FontSize="12" Foreground="#B8B8B8" VerticalAlignment="Center" />
                        <Border Grid.Column="1" Background="#0F0F0F" CornerRadius="4" Padding="8,4" Width="120">
                          <TextBlock Text="{Binding Value}" FontSize="12" />
                        </Border>
                      </Grid>
                    </Button>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>
            </StackPanel>
          </Border>

          <Border Background="#1A1A1A" CornerRadius="10" Padding="16" Margin="0,0,0,16">
            <StackPanel>
              <TextBlock Text="Hardware" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8" />
              <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="Printer name" FontSize="12" Foreground="#B8B8B8" Width="120" VerticalAlignment="Center" />
                <TextBox Text="{Binding PrintName, UpdateSourceTrigger=PropertyChanged}" Width="160" />
              </StackPanel>
              <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <TextBlock Text="Cash COM" FontSize="12" Foreground="#B8B8B8" Width="120" VerticalAlignment="Center" />
                <TextBox Text="{Binding CashCom, UpdateSourceTrigger=PropertyChanged}" Width="120" />
              </StackPanel>
              <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <TextBlock Text="Test mode" FontSize="12" Foreground="#B8B8B8" Width="120" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding TestMode}" />
              </StackPanel>
            </StackPanel>
          </Border>

          <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Reload" Command="{Binding ReloadCommand}" Padding="16,8" />
            <Button Content="Save" Command="{Binding SaveCommand}" Padding="16,8" Margin="8,0,0,0" />
            <Button Content="Close App" Command="{Binding CloseAppCommand}" Padding="16,8" Margin="8,0,0,0" />
          </StackPanel>
        </StackPanel>
      </ScrollViewer>

      <Grid Grid.RowSpan="2"
            Background="#80000000"
            Visibility="{Binding IsNumpadEnabled, Converter={StaticResource BoolToVisibility}}">
        <Button Command="{Binding CancelEntryCommand}"
                Background="Transparent"
                BorderThickness="0" />
        <Border Background="#1A1A1A"
                CornerRadius="12"
                Padding="16"
                Width="420"
                Panel.ZIndex="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
          <StackPanel>
            <TextBlock Text="Numpad" FontSize="18" FontWeight="SemiBold" />
            <TextBlock Text="{Binding SelectedEntry.Label, TargetNullValue=Select a setting}" FontSize="12" Foreground="#B8B8B8" Margin="0,6,0,0" />
            <TextBlock Text="{Binding PendingEntryValue}" FontSize="20" Margin="0,4,0,12" />
            <UniformGrid Rows="4" Columns="3" Margin="0,0,0,12">
              <Button Content="1" Command="{Binding NumpadInputCommand}" CommandParameter="1" Padding="12,10" />
              <Button Content="2" Command="{Binding NumpadInputCommand}" CommandParameter="2" Padding="12,10" />
              <Button Content="3" Command="{Binding NumpadInputCommand}" CommandParameter="3" Padding="12,10" />
              <Button Content="4" Command="{Binding NumpadInputCommand}" CommandParameter="4" Padding="12,10" />
              <Button Content="5" Command="{Binding NumpadInputCommand}" CommandParameter="5" Padding="12,10" />
              <Button Content="6" Command="{Binding NumpadInputCommand}" CommandParameter="6" Padding="12,10" />
              <Button Content="7" Command="{Binding NumpadInputCommand}" CommandParameter="7" Padding="12,10" />
              <Button Content="8" Command="{Binding NumpadInputCommand}" CommandParameter="8" Padding="12,10" />
              <Button Content="9" Command="{Binding NumpadInputCommand}" CommandParameter="9" Padding="12,10" />
              <Button Content="CLR" Command="{Binding NumpadClearCommand}" Padding="12,10" />
              <Button Content="0" Command="{Binding NumpadInputCommand}" CommandParameter="0" Padding="12,10" />
              <Button Content="DEL" Command="{Binding NumpadBackspaceCommand}" Padding="12,10" />
            </UniformGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
              <Button Content="Cancel" Command="{Binding CancelEntryCommand}" Padding="16,8" />
              <Button Content="âœ“" Command="{Binding ConfirmEntryCommand}" Padding="16,8" Margin="8,0,0,0" Width="120" />
            </StackPanel>
          </StackPanel>
        </Border>
      </Grid>
    </Grid>
  </Grid>
</UserControl>
