<UserControl x:Class="KawaiiStudio.App.Views.ErrorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0B0B0B">
  <Grid>
    <Rectangle Fill="#66000000" />
    <Border Background="#1A1A1A"
            CornerRadius="12"
            Padding="24"
            Width="520"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
      <StackPanel>
        <TextBlock Text="{Binding Title}" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,8" />
        <TextBlock Text="{Binding Message}" FontSize="14" Foreground="#B8B8B8" TextWrapping="Wrap" Margin="0,0,0,16" />
        <Button Content="Close Program" Command="{Binding CloseCommand}" Padding="16,8" HorizontalAlignment="Right" />
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
