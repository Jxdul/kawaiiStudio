<Application x:Class="KawaiiStudio.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:KawaiiStudio.App.ViewModels"
             xmlns:views="clr-namespace:KawaiiStudio.App.Views"
             xmlns:conv="clr-namespace:KawaiiStudio.App.Converters">
  <Application.Resources>
    <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    <conv:FilePathToImageSourceConverter x:Key="FilePathToImage" />

    <Style TargetType="TextBlock">
      <Setter Property="Foreground" Value="#F2F2F2" />
    </Style>
    <Style TargetType="Button">
      <Setter Property="Padding" Value="16,8" />
      <Setter Property="Margin" Value="0,0,8,0" />
      <Setter Property="FontSize" Value="16" />
    </Style>

    <DataTemplate DataType="{x:Type vm:HomeViewModel}">
      <views:HomeView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:LibraryViewModel}">
      <views:LibraryView />
    </DataTemplate>
  </Application.Resources>
</Application>
