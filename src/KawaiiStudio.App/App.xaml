<Application x:Class="KawaiiStudio.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:KawaiiStudio.App.ViewModels"
             xmlns:views="clr-namespace:KawaiiStudio.App.Views"
             xmlns:conv="clr-namespace:KawaiiStudio.App.Converters">
  <Application.Resources>
    <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    <conv:FilePathToImageSourceConverter x:Key="FilePathToImage" />

    <Style TargetType="Window">
      <Setter Property="TextElement.Foreground" Value="#F2F2F2" />
    </Style>
    <Style TargetType="Button">
      <Setter Property="Padding" Value="16,8" />
      <Setter Property="Margin" Value="0,0,8,0" />
      <Setter Property="FontSize" Value="16" />
      <Setter Property="Foreground" Value="Black" />
      <Setter Property="TextElement.Foreground" Value="Black" />
    </Style>

    <DataTemplate DataType="{x:Type vm:HomeViewModel}">
      <views:HomeView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:StartupViewModel}">
      <views:StartupView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ErrorViewModel}">
      <views:ErrorView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:SizeViewModel}">
      <views:SizeView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:QuantityViewModel}">
      <views:QuantityView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:LayoutViewModel}">
      <views:LayoutView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:CategoryViewModel}">
      <views:CategoryView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:FrameViewModel}">
      <views:FrameView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:PaymentViewModel}">
      <views:PaymentView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:CaptureViewModel}">
      <views:CaptureView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ReviewViewModel}">
      <views:ReviewView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:FinalizeViewModel}">
      <views:FinalizeView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:PrintingViewModel}">
      <views:PrintingView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ThankYouViewModel}">
      <views:ThankYouView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:LibraryViewModel}">
      <views:LibraryView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:StaffViewModel}">
      <views:StaffView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:TemplateEditorViewModel}">
      <views:TemplateEditorView />
    </DataTemplate>
  </Application.Resources>
</Application>
