<Window x:Class="KawaiiStudio.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kawaii Studio"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#F6F2EA">
  <Grid>
    <ContentControl Content="{Binding CurrentViewModel}" />
    <Border Background="#E6F6F2EA"
            CornerRadius="6"
            Padding="10,6"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="16"
            Visibility="{Binding IsTimeoutVisible, Converter={StaticResource BoolToVisibility}}">
      <TextBlock Text="{Binding TimeoutLabel}" FontSize="14" FontWeight="SemiBold" />
    </Border>
  </Grid>
</Window>

